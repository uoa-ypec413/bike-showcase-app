<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name = "CategoryRelativeLayoutStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/background_primary_variant_round</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name = "CategoryImageViewStyle" >
        <item name="android:layout_width">95sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name = "CategoryTextViewStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
    </style>

</resources>