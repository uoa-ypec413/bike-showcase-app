<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name = "CategoryCardViewStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardBackgroundColor">?colorPrimaryVariant</item>
    </style>

    <style name = "CategoryConstraintLayoutStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardBackgroundColor">?colorPrimaryVariant</item>
    </style>

    <style name = "CategoryImageViewStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="tint">?colorSecondaryVariant</item>
    </style>

    <style name = "CategoryTextViewStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
    </style>

</resources>